<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListOfCars">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:layout_gravity="center_horizontal"
            android:drawableEnd="@drawable/ic_car"
            android:fontFamily="@font/poppinsmedium"
            android:id="@+id/inJenisMobil"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:ems="30"
            android:hint="Please input type of car"
            android:inputType="textPersonName" />

        <EditText
            android:fontFamily="@font/poppinsmedium"
            android:id="@+id/inJenisBensin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="30"
            android:drawableEnd="@drawable/ic_fuel"
            android:hint="Please input type of fuel"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/inHargaSewa"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="30"
            android:drawableEnd="@drawable/ic_money"
            android:fontFamily="@font/poppinsmedium"
            android:hint="Please input rent fee in a day"
            android:inputType="textPersonName" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>